<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    card_view:cardBackgroundColor="#EFEFEF"
    card_view:cardCornerRadius="8dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/equipmentPhoto_book_equipment"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:contentDescription="@string/equipment_photo" />

    <TextView
        android:id="@+id/equipment_name_book_equipment"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#F8F8F8"
        android:gravity="center"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/booking_button_book_equipment"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:text="@string/book"
        />
</LinearLayout>

</androidx.cardview.widget.CardView>